<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login"
    android:background="@drawable/fondoslobo">

    <TextView
        android:id="@+id/tituloLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:text="Iniciar sessió"
        android:textSize="36sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorWhite"/>

    <EditText
        android:id="@+id/usernameLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="Usuari"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"/>

    <EditText
        android:id="@+id/passwordLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Contrassenya"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/btn_login"
        android:text="Iniciar sessió"
        android:layout_marginTop="30dp"
        android:textColor="@drawable/txt_btnlogin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textoInfo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="@string/texto_info"
            android:textColor="@color/colorWhite"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>